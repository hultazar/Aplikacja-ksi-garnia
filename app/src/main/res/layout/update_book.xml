<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Edycja Książki"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/colorAccent" />

    <EditText
        android:id="@+id/editTytul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nowy tytul" />

    <EditText
        android:id="@+id/editAutor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nowy autor" />

    <EditText
        android:id="@+id/editKraj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nowy kraj" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="6dp"
        android:text="Rodzaj" />

    <Spinner
        android:id="@+id/spinnerRodzaj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/rodzaj" />

    <EditText
        android:id="@+id/editIndeks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="0123456789"
        android:hint="Nowy indeks "
        android:inputType="number" />

    <Button
        android:id="@+id/buttonUpdateBooks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="Update" />

</LinearLayout>